generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String? //Only for credentials provider

  // Profile fields
  bio       String?

  // Preferences fields
  theme           UserTheme @default(LIGHT)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  focuses Focus[]
  decisions Decision[]
  documents Document[]
  Reflection Reflection[]
  providers  AuthProvider[] 
}


model AuthProvider {
  id          String   @id @default(cuid())
  provider    String
  providerId  String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([provider, providerId]) // prevent duplicates
}

model Focus {
  id     String      @id @default(cuid())
  title  String
  status FocusStatus @default(PENDING)
  mood   String
  notes  String
  image  String?
  date   DateTime    @default(now())

  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Decision {
  id     String      @id @default(cuid())
  title  String
  reason String
  status DecisionStatus @default(PENDING)
  date   DateTime    @default(now())
  image  String?
  category DecisionCategory

  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reflection {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  type      String   // 'daily', 'weekly', 'decision'
  metadata  Json?    // Store additional context like prompt, entry counts, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

enum FocusStatus {
  PENDING
  ACHIEVED
  NOT_ACHIEVED
  PARTIALLY_ACHIEVED
}

enum DecisionStatus {
  PENDING
  ACHIEVED
  NOT_ACHIEVED
  PARTIALLY_ACHIEVED
}

enum DecisionCategory {
  CAREER
  HEALTH
  FINANCE
  RELATIONSHIPS
  LIFESTYLE 
  GENERAL
  OTHER
}

enum UserTheme {
  LIGHT
  DARK
  SYSTEM
}

enum DocumentType {
  FOCUS_REVIEW
  DECISION_REFLECTION
  GENERAL_NOTES
  WEEKLY_REVIEW
  OTHER
}

model Document {
  id          String       @id @default(cuid())
  title       String
  content     Json         // Stores the Tiptap JSON content
  type        DocumentType @default(GENERAL_NOTES)
  tags        String[]     // For categorization and filtering
  isArchived  Boolean      @default(false)
  
  // Relationships
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Embedded references
  focusIds    String[]     // References to embedded Focus entries
  decisionIds String[]     // References to embedded Decision entries
  
  // Timestamps
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Indexes
  @@index([userId])
  @@index([type])
  @@index([isArchived])
}