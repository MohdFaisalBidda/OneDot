generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String? //Only for credentials provider

  // Profile fields
  bio       String?

  // Preferences fields
  theme           UserTheme @default(LIGHT)
  
  // Membership tracking
  isLifetimeFree  Boolean @default(false)
  userNumber      Int?    @unique // Position in signup queue (1-100 are lifetime free)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  focuses Focus[]
  decision Decision[]
}

model Focus {
  id     String      @id @default(cuid())
  title  String
  status FocusStatus
  mood   String
  notes  String
  image  String?
  date   DateTime    @default(now())

  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Decision {
  id     String      @id @default(cuid())
  title  String
  reason String
  date   DateTime    @default(now())
  image  String?
  category DecisionCategory

  userId String
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum FocusStatus {
  PENDING
  ACHIEVED
  NOT_ACHIEVED
  PARTIALLY_ACHIEVED
}

enum DecisionCategory {
  CAREER
  HEALTH
  FINANCE
  RELATIONSHIPS
  LIFESTYLE 
  GENERAL
  OTHER
}

enum UserTheme {
  LIGHT
  DARK
  SYSTEM
}